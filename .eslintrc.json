{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "project": "./tsconfig.json"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
        "semi": "error"
    },
    "extends": [
        "airbnb-typescript/base",
        "eslint:recommended", 
        "plugin:@typescript-eslint/recommended",        
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "env": {
        //"browser": true,
        "node": true,
        "es6": true
    }
}